<header id="layout-header">
    
   <nav>
     <div class="mini-logo">
       <p>
           <a href="/" class="increse-size">Authentication</a>
       </p>
     </div>

    <div class="auth-links"> 
    <ul>
        <% if (locals.user) {%>
            <li>
                <a href="/users/profile" class="increse-size">
                  <%=user.name %> 
                </a>
            </li>
            <li>    
                <a href="/users/sign-out" class="increse-size">Sign Out</a>
            </li>
        <% } else{%>
                  
            <li>
                <a href="/users/sign-in" class="increse-size">Sign In</a>
            </li>
            <li>
                <a href="/users/sign-up" class="increse-size">Sign Up</a>
            </li>
             
        <%} %>
    </ul>
</div>
</nav>  
</header>    
